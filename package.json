{
  "name": "saas-accelerator",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm turbo run dev",
    "build": "pnpm turbo run build",
    "test": "pnpm turbo run test",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "lint": "turbo run lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0"
  },
  "packageManager": "pnpm@8.15.3",
  "turbo": {
    "pipeline": {
      "dev": {
        "cache": false
      },
      "build": {
        "outputs": ["dist/**", "build/**"]
      },
      "test": {
        "outputs": []
      }
    }
  }
} 